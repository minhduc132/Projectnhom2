@model IEnumerable<ClientAPI.Models.Order>
@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="OrderDate">Order date:</label>
        <input class="form-control" name="OrderDate" />
    </div>

    <div class="form-group">
        <label for="CustomerName">CustomerName:</label>
        <input class="form-control" name="CustomerName" />
    </div>
    <div class="form-group">
        <label for="CustomerAddress">CustomerAddress:</label>
        <input class="form-control" name="CustomerAddress" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

